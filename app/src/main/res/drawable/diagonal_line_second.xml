<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

            <item>
                <rotate
                    android:fromDegrees="137"
                    android:toDegrees="137"
                    android:pivotX="50%"
                    android:pivotY="50%" >
                    <shape
                        android:shape="line"
                        android:top="1dip" >
                        <stroke
                            android:width="6dip"
                            android:color="#FF0000" />
                    </shape>
                </rotate>
            </item>

        </layer-list>
    </item>

</layer-list>